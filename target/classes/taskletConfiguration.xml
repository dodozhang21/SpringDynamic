<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="net.pureessence.example"/>




    <bean id="tasklet1Execution" class="net.pureessence.example.TaskletExecution">
        <property name="methodName" value="methodOne"/>
        <property name="parameters">
            <list>
                <bean class="java.lang.String">
                    <constructor-arg>
                        <value>tasklet1 arg1</value>
                    </constructor-arg>
                </bean>
                <bean class="java.lang.String">
                    <constructor-arg>
                        <value>tasklet1 arg2</value>
                    </constructor-arg>
                </bean>
                <bean class="net.pureessence.example.Type" factory-method="valueOf">
                    <constructor-arg>
                        <value>TYPE_1</value>
                    </constructor-arg>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="tasklet2Execution" class="net.pureessence.example.TaskletExecution">
        <property name="methodName" value="methodTwo"/>
        <property name="parameters">
            <list>
                <bean class="java.lang.String">
                    <constructor-arg>
                        <value>tasklet2 arg1</value>
                    </constructor-arg>
                </bean>
                <bean class="net.pureessence.example.Type" factory-method="valueOf">
                    <constructor-arg>
                        <value>TYPE_2</value>
                    </constructor-arg>
                </bean>
                <bean class="java.lang.Integer">
                    <constructor-arg>
                        <value>2</value>
                    </constructor-arg>
                </bean>
            </list>
        </property>
    </bean>

    <util:constant id="type1" static-field="net.pureessence.example.Type.TYPE_1"/>


</beans>